<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="header">
                        <h4 class="title">Student Information</h4>
                    </div>
                    <div class="content table-responsive table-full-width">
                        <table class="table table-hover table-striped">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Gender</th>
                                    <th>Age</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                    <th>PhoneNumber</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var student in Model)
                                {
                                    <tr>
                                        <td>@student.FirstName</td>
                                        <td>@student.LastName</td>
                                        <td>@student.Gender</td>
                                        <td>@student.Age</td>
                                        <td>@student.Email</td>
                                        <td>@student.Address</td>
                                        <td>@student.PhoneNumber</td>
                                        <td>
                                            <a asp-controller="Home"
                                               asp-action="Edit"
                                               asp-route-id="@student.StudentId"
                                               class="btn btn-info btn-fill">Edit</a>
                                        </td>
                                        <td>
                                            <a asp-controller="Home"
                                               asp-action="DeleteStudent"
                                               asp-route-id="@student.StudentId"
                                               class="btn btn-danger btn-fill">Delete</a>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>